<%- include("partials/header.ejs")%>
<h1 class="title name">All Entries</h1>
<hr>
<div class="allEntries">
	<%if (locals.entries[0]){%>
		<% for (var i = entries.length - 1; i > 0; i--){ %>
			<div class="title" style="display: flex; flex-direction: row; justify-content: space-around;">
				<form class="entryForm" action="/entry" method="post">
					<input type="hidden" name="entryIndex" value="<%=i%>">
					<input style="position: relative; left: 20%; width:300px; text-align: left; "class="header-btn" type="submit" name="submit" value="<%=entries[i].title%>">
				</form>
				<p class="date" style="position: relative; right: 8vw; padding-top: 2%;"><%=entries[i].day + "-" + entries[i].month + "-" + entries[i].year%></p>
			</div>
		<% } %>
	<%}%>
</div>
<%- include("partials/footer.ejs")%>